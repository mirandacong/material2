package(default_visibility=["//visibility:public"])
licenses(["notice"])

load("@io_bazel_rules_sass//:defs.bzl", "sass_library", "sass_binary")
load("//third_party/ts/material2/tools:defaults.bzl", "ng_module", "ng_test_library", "ng_web_test_suite")

ng_module(
  name = "tabs",
  srcs = glob(["**/*.ts"], exclude=["**/*.spec.ts"]),
  module_name = "@angular/material/tabs",
  assets = [
    ":tab-body.css",
    ":tab-header.css",
    ":tab-group.css",
    ":tab-nav-bar/tab-nav-bar.css",
  ] + glob(["**/*.html"]),
  deps = [
    "@angular//packages/animations",
    "@angular//packages/common",
    "@angular//packages/core",
    "@rxjs",
    "@rxjs//operators",
    "//third_party/ts/material2/src/cdk/a11y",
    "//third_party/ts/material2/src/cdk/bidi",
    "//third_party/ts/material2/src/cdk/coercion",
    "//third_party/ts/material2/src/cdk/keycodes",
    "//third_party/ts/material2/src/cdk/observers",
    "//third_party/ts/material2/src/cdk/platform",
    "//third_party/ts/material2/src/cdk/portal",
    "//third_party/ts/material2/src/cdk/scrolling",
    "//third_party/ts/material2/src/lib/core",
  ],
)


# TODO(jelbourn): remove this when sass_library acts like a filegroup
filegroup(
  name = "tabs_scss_partials",
  srcs = glob(["**/_*.scss"]),
)

# Library of all tabs scss partials.
sass_library(
  name = "tabs_scss_lib",
  srcs = [":tabs_scss_partials"],
  deps = ["//third_party/ts/material2/src/lib/core:core_scss_lib"],
)

sass_binary(
  name = "tab_body_scss",
  src = "tab-body.scss",
  deps = [
    "//third_party/ts/material2/src/lib/core:core_scss_lib",
    "tabs_scss_lib",
  ],
)

sass_binary(
  name = "tab_header_scss",
  src = "tab-header.scss",
  deps = [
    "//third_party/ts/material2/src/lib/core:core_scss_lib",
    "tabs_scss_lib",
  ],
)

sass_binary(
  name = "tab_group_scss",
  src = "tab-group.scss",
  deps = [
    "//third_party/ts/material2/src/lib/core:core_scss_lib",
    "tabs_scss_lib",
  ],
)

sass_binary(
  name = "tab_nav_bar_scss",
  src = "tab-nav-bar/tab-nav-bar.scss",
  deps = [
    "//third_party/ts/material2/src/lib/core:core_scss_lib",
    "tabs_scss_lib",
  ],
)

sass_library(
  name = "theme",
  srcs = glob(["**/*-theme.scss"]),
)

ng_test_library(
  name = "tabs_test_sources",
  srcs = glob(["**/*.spec.ts"]),
  deps = [
    "@angular//packages/common",
    "@angular//packages/platform-browser",
    "@angular//packages/platform-browser/animations",
    "@rxjs",
    "//third_party/ts/material2/src/cdk/bidi",
    "//third_party/ts/material2/src/cdk/keycodes",
    "//third_party/ts/material2/src/cdk/observers",
    "//third_party/ts/material2/src/cdk/portal",
    "//third_party/ts/material2/src/cdk/scrolling",
    "//third_party/ts/material2/src/cdk/testing",
    "//third_party/ts/material2/src/lib/core",
    ":tabs",
  ]
)

ng_web_test_suite(
  name = "unit_tests",
  deps = [":tabs_test_sources"],
)
